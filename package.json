{
  "name": "dota-chop-shop",
  "version": "1.0.0",
  "description": "Calculate the most cost-efficient Dota 2 items based on stat values",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "chop-shop": "src/cli/index.ts"
  },
  "scripts": {
    "install": "bun install",
    "start": "bun run src/cli/index.ts",
    "dev": "bun run --watch src/cli/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "bun x tsc --noEmit"
  },
  "keywords": [
    "dota2",
    "items",
    "efficiency",
    "calculator"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "bun-types": "^1.3.4",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "cli-progress": "^3.12.0",
    "commander": "^14.0.2",
    "es-toolkit": "^1.43.0"
  }
}
